<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollIndicators="none"
        android:scrollbarSize="0dp"
        android:scrollbarStyle="outsideOverlay"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
       <android.support.v7.widget.CardView
           android:id="@+id/home_cc"
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:onClick="openCC"
           app:cardCornerRadius="10dp"
           app:cardElevation="10dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintBottom_toTopOf="@id/home_ps">
           <android.support.constraint.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/jama_mazjid">
               <TextView
                   android:id="@+id/home_cc_1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/home_cc_1"
                   android:textAlignment="center"
                   android:textSize="20sp"
                   android:textColor="@color/home_background"
                   android:textStyle="bold"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toTopOf="@+id/home_cc_2"/>

               <TextView
                   android:id="@+id/home_cc_2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/chandni_chowk"
                   android:textAlignment="center"
                   android:layout_marginTop="30dp"
                   android:textSize="40sp"
                   android:textColor="@color/home_cc_head"
                   android:textStyle="bold"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/home_cc_1"
                   app:layout_constraintBottom_toTopOf="@+id/home_cc_3"/>

               <TextView
                   android:id="@+id/home_cc_3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/home_cc_3"
                   android:textAlignment="center"
                   android:layout_marginTop="70dp"
                   android:textSize="20sp"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/home_cc_2"
                   app:layout_constraintBottom_toBottomOf="parent"/>

           </android.support.constraint.ConstraintLayout>
       </android.support.v7.widget.CardView>

       <LinearLayout
           android:id="@+id/home_ps"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="10dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/home_cc"
           app:layout_constraintBottom_toTopOf="@id/kyc">
           <android.support.v7.widget.CardView
               android:layout_height="70dp"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:onClick="openPS"
               app:cardBackgroundColor="@color/white"
               app:cardCornerRadius="10dp"
               app:cardElevation="10dp"
               android:layout_margin="10dp">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp">
                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:layout_marginEnd="5dp"
                       android:src="@drawable/poll"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textAlignment="center"
                       android:textColor="@color/black"
                       android:layout_marginTop="10dp"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:text="@string/home_ps"/>
               </LinearLayout>
           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_height="70dp"
               android:layout_width="0dp"
               android:onClick="openInfo"
               app:cardCornerRadius="10dp"
               app:cardBackgroundColor="@color/white"
               app:cardElevation="10dp"
               android:layout_weight="1"
               android:layout_margin="10dp">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp">
                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:layout_marginEnd="5dp"
                       android:src="@drawable/info"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textAlignment="center"
                       android:textColor="@color/black"
                       android:layout_marginTop="10dp"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:text="@string/home_info"/>
               </LinearLayout>
           </android.support.v7.widget.CardView>
       </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/kyc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="openKYC"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_ps"
        app:layout_constraintBottom_toTopOf="@id/third_gender">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_kyc"
            android:textAlignment="center"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawableTop="@drawable/home_kyc_icon"
            android:textStyle="italic"
            android:textColor="@color/black"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/third_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="openThirdG"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kyc"
        app:layout_constraintBottom_toTopOf="@id/pwd">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_third_gender"
            android:textAlignment="center"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/home_thirdg_icon"
            android:paddingBottom="10dp"
            android:textStyle="italic"
            android:textColor="@color/black"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="openPWD"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/third_gender"
        app:layout_constraintBottom_toTopOf="@id/feedback">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_pwd"
            android:textAlignment="center"
            android:textSize="18sp"
            android:drawableTop="@drawable/home_pwd_icon"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textStyle="italic"
            android:textColor="@color/black"/>
    </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="openFeedbackPage"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pwd"
                app:layout_constraintBottom_toTopOf="@id/logIn">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_feed"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:drawableTop="@drawable/home_feed_icon"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textStyle="italic"
                    android:textColor="@color/black"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/logIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="goToLogIn"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/feedback"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_login"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textStyle="italic"
                    android:textColor="@color/description_cc"/>
            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

